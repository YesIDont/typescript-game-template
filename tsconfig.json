{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "module": "ES6",
    "moduleResolution": "node",
    "newLine": "lf",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "dist/",
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "ES6",
    "baseUrl": "./src",
    "paths": {
      "engine/": ["./core/"],
      "engine/*": ["./core/*"]
    }
  },
  "include": ["src"]
}
